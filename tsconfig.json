{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es6", "dom", "es2016.array.include"],
    "module": "commonjs",
    "declaration": true,
    "sourceMap": true,
    "removeComments": true,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "alwaysStrict": true,
    "moduleResolution": "node",
    "rootDir": "src",
    "outDir": "lib",
    "jsx": "react"
  },
  "include": [
    "src/index.tsx"
  ]
}
